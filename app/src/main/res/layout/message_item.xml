<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/message_item_view"
    >

    <LinearLayout
        android:id="@+id/message_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_bg_dark"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        android:autoLink="all"
        android:textColorLink="#fff"
        android:textColor="#fff"
        android:id="@+id/message_item_text"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_item_time"
            android:text="TIME"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="3dp"
            android:textColor="@color/bgwhite"
            android:textSize="10dp"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/image_item_layout"
        android:background="@drawable/message_bg_dark"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/chat_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_item_time"
            android:text="TIME"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="3dp"
            android:textColor="@color/bgwhite"
            android:textSize="10dp"
            android:layout_gravity="end"/>

    </LinearLayout>
</LinearLayout>